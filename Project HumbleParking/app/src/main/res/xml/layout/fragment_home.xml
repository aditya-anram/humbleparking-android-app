<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#E9EAF1"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@xml/layout_card"
        android:layout_width="390dp"
        android:layout_height="250dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_app"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humble Parking"
                android:fontFamily="viga"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="viga"
                android:text="Semua Urusan Parkir Jadi Mudah Dan Cepat"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/menuBooking"
                    android:scaleType="centerInside"
                    android:src="@drawable/menu_booking"
                    android:layout_marginRight="30dp"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="keBooking"
                    />
                <ImageButton
                    android:id="@+id/menuHistory"
                    android:scaleType="centerInside"
                    android:src="@drawable/menu_history"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="keRiwayat"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:layout_marginLeft="78dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat"
                android:layout_marginLeft="107dp"
                android:textColor="#000"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/menuHelp"
                    android:scaleType="centerInside"
                    android:src="@drawable/menu_help"
                    android:layout_marginRight="30dp"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="keHelp"/>
                <ImageButton
                    android:id="@+id/menuHubungi"
                    android:scaleType="centerInside"
                    android:src="@drawable/menu_hubungi_kami"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="keHubungi"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:layout_marginLeft="85dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami"
                android:layout_marginLeft="104dp"
                android:textColor="#000"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Humble Parking App"
            android:padding="18dp"
            android:background="#00ced1"
            android:textSize="20dp" />

    </LinearLayout>



</RelativeLayout>